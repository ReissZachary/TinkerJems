<UserControl x:Class="TinkerJems.Wpf.Application.Views.HomeView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TinkerJems.Wpf.Application.Views"
             xmlns:prism="http://prismlibrary.com/"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>        

        <!--navbar-->
        <Border BorderBrush="Gray"
                BorderThickness="2"
                Grid.Row="0"
                CornerRadius="1">
            <Grid Background="#edd8ce">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="auto"/>
                    <ColumnDefinition Width="auto"/>
                    <ColumnDefinition Width="auto"/>
                    <ColumnDefinition Width="auto"/>
                    <ColumnDefinition Width="auto"/>
                    <ColumnDefinition Width="auto"/>
                </Grid.ColumnDefinitions>

                <!--<TextBlock Text="&lt;&lt;&lt;"
                           Grid.Column="0"
                           Margin="10"/>-->
                <Button Command="{Binding NavigateToSearch}"
                        CommandParameter="SearchView"
                        Width="auto"
                        Height="auto"
                        Content="3"
                        Grid.Column="0"
                        Margin="10"
                        Background="Transparent"
                        BorderThickness="0"
                        FontFamily="Marlett"
                        FontSize="25"
                        Foreground="#123c69">
                </Button>

                <Button Command="{Binding NavigateToSearch}"
                        CommandParameter="SearchView"
                        Width="auto"
                        Height="auto"
                        Content="ITEM"
                        Grid.Column="1"
                        Margin="10"
                        Background="Transparent"
                        BorderThickness="0">
                </Button>
                <!--<layoutToolkit1:Accordion ExpandDirection="Down"
                                          Grid.Column="2"
                                          Margin="10">
                    <layoutToolkit1:AccordionItem Header="Red">
                        <TextBlock Text="Rings"/>
                    </layoutToolkit1:AccordionItem>
                </layoutToolkit1:Accordion>-->

                <!--<TextBlock Text="About Me"
                           Grid.Column="2"
                           Margin="10"/>-->

                <StackPanel Margin="10"
                            Grid.Column="2">
                    <ComboBox>
                        <ComboBoxItem IsSelected="True"
                                      Content="Jewelry"/>
                        <ComboBoxItem Content="Rings"/>
                        <ComboBoxItem Content="Necklaces"/>
                        <ComboBoxItem Content="Earrings"/>
                        <ComboBoxItem Content="Bracelets"/>
                    </ComboBox>
                </StackPanel>

                <Button Command="{}"
                        CommandParameter="SearchView"
                        Width="auto"
                        Height="auto"
                        Content="About Me"
                        Grid.Column="3"
                        Margin="10"
                        Background="Transparent"
                        BorderThickness="0">
                </Button>

                <Button Command="{}"
                        CommandParameter="SearchView"
                        Width="auto"
                        Height="auto"
                        Content="How It Works"
                        Grid.Column="4"
                        Margin="10"
                        Background="Transparent"
                        BorderThickness="0">
                </Button>

                <Button Command="{}"
                        CommandParameter="SearchView"
                        Width="auto"
                        Height="auto"
                        Content="Contact Me"
                        Grid.Column="5"
                        Margin="10"
                        Background="Transparent"
                        BorderThickness="0">
                </Button>
            </Grid>
        </Border>
        
        <ContentControl Name="ContentRegion"
                        prism:RegionManager.RegionName="ContentRegion"
                        Grid.Row="3">
        </ContentControl>

    </Grid>   
</UserControl>
