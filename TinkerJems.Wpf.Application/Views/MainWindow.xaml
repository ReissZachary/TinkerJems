<Window x:Class="TinkerJems.Wpf.Application.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TinkerJems.Wpf.Application"
        xmlns:prism="http://prismlibrary.com/"
        xmlns:views="clr-namespace:TinkerJems.Wpf.Application.Views"
        prism:ViewModelLocator.AutoWireViewModel="True"
        mc:Ignorable="d"
        Title="MainWindow" Height="800" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        
        <!--heading-->
        <TextBlock Grid.Row="0"
                   Text="Tinker Jems"
                   HorizontalAlignment="Center"
                   FontSize="24"
                   />
        
        <!--navbar-->
        <TextBlock Grid.Row="1"
                   Text="NavBar"
                   />
        
        <!--image-->
        <Image Grid.Row="2"
               Height="500"
               Source="https://i.ytimg.com/vi/-mMhKYJFOnQ/maxresdefault.jpg"
               />
        
        <!--jewelryItems-->
        <ListView Grid.Row="3"
                  Width="500"
                  Height="450"
                  ItemsSource="{Binding JewelryItems}">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <StackPanel
                       Orientation="Vertical"
                       HorizontalAlignment="Right">
                        <Image Source="{Binding ImageUrl}"
                               Height="75px"/>
                        <TextBlock Text="{Binding ImageUrl}"/>
                        <TextBlock Text="{Binding Name}"/>
                        <TextBlock Text="{Binding Price}"/>
                    </StackPanel>
                </DataTemplate>
            </ListView.ItemTemplate>

        </ListView>


    </Grid>
</Window>
