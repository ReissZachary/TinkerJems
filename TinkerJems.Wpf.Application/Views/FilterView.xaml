                        </Ellipse>
                        <TextBlock Text="$10.00"
                                   FontSize="18"/>
                    </StackPanel>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>-->
        

    </Grid>
</UserControl>
