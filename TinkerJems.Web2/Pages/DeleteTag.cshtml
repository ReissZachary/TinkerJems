@page
@model TinkerJems.Web2.Pages.DeleteTagModel
@{
    ViewData["Title"] = "DeleteTag";
}

<h1></h1>

<h3 style="text-align:center; font-size:42px">Are you sure you want to delete this tag?</h3>
<br />
<div style="text-align:center"> 
    <form method="post">
        <input type="hidden" asp-route-tagName="@Model.SelectedTag" />
        <input style="padding:0em" type="submit" value="Yes, Delete" class="btn btn-default" /> |
        <a asp-page="./Index" style="color:black; text-decoration:none">No, Back to List</a>
    </form>
</div>