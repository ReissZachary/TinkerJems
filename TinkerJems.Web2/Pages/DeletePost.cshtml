<div class="media" style="border:solid; border-width: .5px; border-radius: 5px; margin:1em; display:block;">
    <div style="vertical-align:middle; overflow:auto">
        <img src="./Images/@Html.DisplayFor(model => model.BlogPost.Image)" style="width:300px; height:300px; padding: 1em; float:left" />
        <h2 class="control-label" style="display:block">@Html.DisplayFor(model => model.BlogPost.Title)</h2>
        <p class="summary" style="font-size: 15px;">@Html.DisplayFor(model => model.BlogPost.Summary)</p>
    </div>
</div>
<div class="message" style="text-align:center">
    <p class="confirmation" style="color:red; font-weight:bold">Are you sure you want to delete this post?</p>
</div>
<hr />
<div>
    <form method="post" style="text-align:center;">
        <input type="hidden" asp-for="BlogPost.ID" />
        <input type="submit" value="Yes, delete it" class="btn btn-default" /> |
        <a asp-page="./Blog" style="text-decoration: none; color:black;">No, go back to blog</a>
    </form>
</div>

