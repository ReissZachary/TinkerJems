@page
@model TinkerJems.Web2.Pages.IndexModel
@using Microsoft.AspNetCore.Authorization
@inject IAuthorizationService Authorization
@{
    var canAdd = (await Authorization.AuthorizeAsync(User, SeedData.SecurityPolicy_Add)).Succeeded;

}
@{
    ViewData["Title"] = "Jewelry Items";
}

<h2 class="text-center">Jewelry Items</h2>

<hr />

@foreach (var item in Model.JewelryItems)
{
    <a asp-page="./Details" asp-route-id="@item.Id" style="text-decoration:none">
        <div class="media" style="border:solid; margin:1em; background-color:#fffcff; display:inline-block;">
            <img asp-route-id="@item.Id" class="mr-3" style="width:150px; height:150px; margin-bottom:1em; margin-left:.5em; margin-right:0em" src="/Images/@Html.DisplayFor(modelItem => item.ImageThumbnailUrl)" alt="Generic placeholder image">
            <div class="media-body" style="display:inline-block; margin:.5em">
                <a asp-page="./Details" asp-route-id="@item.Id" style="text-decoration:none; color:black"><h5 class="mt-0">@Html.DisplayFor(modelItem => item.Name)</h5></a>
                <p asp-route-id="@item.Id">$@Html.DisplayFor(modelItem => item.Price)</p>
                <p asp-route-id="@item.Id">
                    @Html.DisplayFor(modelItem => item.Description)
                </p>
            </div>
        </div>
    </a>
}
