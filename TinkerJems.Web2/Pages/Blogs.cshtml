@page
@model TinkerJems.Web2.Pages.BlogsModel
@using Microsoft.AspNetCore.Authorization
@inject IAuthorizationService Authorization
@{
    var canAdd = (await Authorization.AuthorizeAsync(User, SeedData.SecurityPolicy_Add)).Succeeded;
    var canEdit = (await Authorization.AuthorizeAsync(User, SeedData.SecurityPolicy_Edit)).Succeeded;
}
@{
    ViewData["Title"] = "Posts";
}

<h1>Blogs</h1>
<hr/>

<div>
    @foreach (var blog in Model.BlogPosts)
    {
        <a asp-page="./Post" asp-route-id="@blog.ID" style="text-decoration:none">
            <div class="media" style="border:solid; border-width: .5px; border-radius: 5px; margin:1em; background-color:#fffcff; display:block;">
                <article>
                    @if(blog.Image != null)
                    {
                         <img asp-route-id="@blog.ID" class="mr-3" style="width:200px; height:200px; margin:.5em; vertical-align:middle" src="/Images/@Html.DisplayFor(modelblog => blog.Image)" alt="Post Image">
                    }
                    <div class="media-body" style="display:inline-block; margin:.5em; position:relative; vertical-align:middle;">
                        <h2 class="mt-0"><a asp-page="./Post" asp-route-id="@blog.ID" style="text-decoration:none; color:black">@Html.DisplayFor(modelItem => blog.Title)</a></h2>
                        <p asp-route-id="@blog.ID">@blog.Summary</p>
                        <p asp-route-id="@blog.ID">
                            By: @Html.DisplayFor(modelblog => blog.Author)
                        </p>
                        <p asp-route-id="@blog.ID">
                            @Html.DisplayFor(modelblog => blog.Posted)
                        </p>
                        @if (canEdit)
                        {
                            <button asp-page="" type="button" class="btn-link glyphicon glyphicon-pencil">Edit</button>
                            <button asp-page="" type="button" class="btn-link glyphicon glyphicon-remove">Delete</button>
                        }
                    </div>
                </article>
            </div>
        </a>
        <hr />
    }
</div>

@if (canAdd)
{
    <a asp-page="./CreateBlog">
        <button type="button" class="btn btn-outline-info">Create Entry</button>
    </a>
}


